---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto - Automatizar">
	<main class="container my-4">
		<h1 class="text-center mb-4" style="color: rgb(17, 60, 105);">Contacto</h1>
		
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card shadow">
					<div class="card-body">
						<form action="https://api.web3forms.com/submit" method="POST">
							<input type="hidden" name="access_key" value="04eda78e-e58a-4822-ac83-d748466a31f2">
							<input type="hidden" name="subject" value="Nuevo contacto desde Automatizar">
							<input type="hidden" name="from_name" value="Automatizar Website">
							<input type="hidden" name="redirect" value="https://nicolascoria-9.github.io/automatizar/gracias">
							
							<div class="mb-3">
								<label for="nombre" class="form-label">Nombre</label>
								<input type="text" class="form-control" id="nombre" name="nombre" required>
							</div>
							
							<div class="mb-3">
								<label for="apellido" class="form-label">Apellido</label>
								<input type="text" class="form-control" id="apellido" name="apellido" required>
							</div>
							
							<div class="mb-3">
								<label for="email" class="form-label">Email</label>
								<input type="email" class="form-control" id="email" name="email" required>
							</div>
							
							<div class="mb-3">
								<label for="telefono" class="form-label">Tel√©fono</label>
								<input type="tel" class="form-control" id="telefono" name="telefono">
							</div>
							
							<div class="mb-3">
								<label for="mensaje" class="form-label">Mensaje</label>
								<textarea class="form-control" id="mensaje" name="mensaje" rows="4" required></textarea>
							</div>
							
							<div class="text-center">
								<button type="submit" class="btn btn-primary px-5" style="background-color: rgb(17, 60, 105); border-color: rgb(17, 60, 105);">
									Enviar Mensaje
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style>
.btn-primary:hover {
	background-color: rgb(62, 125, 218) !important;
	border-color: rgb(62, 125, 218) !important;
}

.card {
    border: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.form-label {
    color: rgb(17, 60, 105);
    font-weight: 500;
}

.form-control {
    border: 1px solid rgba(17, 60, 105, 0.2);
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: rgb(62, 125, 218);
    box-shadow: 0 0 0 0.25rem rgba(62, 125, 218, 0.25);
}

.alert {
    border: none;
    border-radius: 8px;
}

.alert-success {
    background-color: rgba(25, 135, 84, 0.1);
    color: #155724;
}

.alert-danger {
    background-color: rgba(220, 53, 69, 0.1);
    color: #721c24;
}
</style>
