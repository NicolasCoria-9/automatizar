---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto - Automatizar">
	<main class="container my-4">
		<h1 class="text-center mb-4" style="color: rgb(17, 60, 105);">Contacto</h1>
		
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card shadow">
					<div class="card-body">
						<form action="https://api.web3forms.com/submit" method="POST" id="form">
							<input type="hidden" name="access_key" value="ec4b1c0c-ca86-4aa5-9eda-50d4df215bc6" />
							<input type="hidden" name="subject" value="Consulta desde el sitio web" />
							<input type="checkbox" name="botcheck" style="display: none;" />
				  
							<div class="mb-3">
							  <label for="name" class="form-label">Nombre completo</label>
							  <input type="text" name="name" id="name" placeholder="Juan Pérez" required class="form-control" />
							</div>

							<div class="mb-3">
							  <label for="email" class="form-label">Email</label>
							  <input type="email" name="email" id="email" placeholder="tu@email.com" required class="form-control" />
							</div>

							<div class="mb-3">
							  <label for="phone" class="form-label">Teléfono</label>
							  <input type="text" name="phone" id="phone" placeholder="(11) 1234-5678" required class="form-control" />
							</div>

							<div class="mb-3">
							  <label for="message" class="form-label">Mensaje</label>
							  <textarea rows="4" name="message" id="message" placeholder="Tu mensaje" class="form-control" required></textarea>
							</div>

							<div class="text-center">
							  <button type="submit" class="btn btn-primary px-5" style="background-color: rgb(17, 60, 105); border-color: rgb(17, 60, 105);">
								Enviar Mensaje
							  </button>
							</div>

							<p class="text-center mt-3" id="result"></p>
						  </form>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>

<script>
const form = document.getElementById("form");
const result = document.getElementById("result");

form.addEventListener("submit", function (e) {
  const formData = new FormData(form);
  e.preventDefault();
  var object = {};
  formData.forEach((value, key) => {
    object[key] = value;
  });
  var json = JSON.stringify(object);
  result.innerHTML = "Por favor espere...";

  fetch("https://api.web3forms.com/submit", {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
      Accept: "application/json"
    },
    body: json
  })
    .then(async (response) => {
      let json = await response.json();
      if (response.status == 200) {
        result.innerHTML = json.message;
        result.className = "text-center mt-3 text-success";
      } else {
        console.log(response);
        result.innerHTML = json.message;
        result.className = "text-center mt-3 text-danger";
      }
    })
    .catch((error) => {
      console.log(error);
      result.innerHTML = "¡Algo salió mal!";
      result.className = "text-center mt-3 text-danger";
    })
    .then(function () {
      form.reset();
      setTimeout(() => {
        result.style.display = "none";
      }, 5000);
    });
});
</script>

<style>
.btn-primary:hover {
	background-color: rgb(62, 125, 218) !important;
	border-color: rgb(62, 125, 218) !important;
}

.card {
    border: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.form-label {
    color: rgb(17, 60, 105);
    font-weight: 500;
}

.form-control {
    border: 1px solid rgba(17, 60, 105, 0.2);
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: rgb(62, 125, 218);
    box-shadow: 0 0 0 0.25rem rgba(62, 125, 218, 0.25);
}
</style>
