---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto - Automatizar">
	<main class="container my-4">
		<h1 class="text-center mb-4" style="color: rgb(17, 60, 105);">Contacto</h1>
		
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card shadow">
					<div class="card-body">
						<form action="https://formspree.io/f/xdoqbwjw" method="POST" id="contactForm">
							<div class="mb-3">
								<label for="nombre" class="form-label">Nombre</label>
								<input type="text" class="form-control" id="nombre" name="nombre" required>
							</div>
							
							<div class="mb-3">
								<label for="apellido" class="form-label">Apellido</label>
								<input type="text" class="form-control" id="apellido" name="apellido" required>
							</div>
							
							<div class="mb-3">
								<label for="email" class="form-label">Email</label>
								<input type="email" class="form-control" id="email" name="email" required>
							</div>
							
							<div class="mb-3">
								<label for="telefono" class="form-label">Teléfono</label>
								<input type="tel" class="form-control" id="telefono" name="telefono">
							</div>
							
							<div class="mb-3">
								<label for="comentario" class="form-label">Mensaje</label>
								<textarea class="form-control" id="comentario" name="comentario" rows="4" required></textarea>
							</div>
							
							<div class="text-center">
								<button type="submit" class="btn btn-primary px-5" style="background-color: rgb(17, 60, 105); border-color: rgb(17, 60, 105);">
									Enviar Mensaje
								</button>
							</div>
						</form>
						
						<div id="successMessage" class="alert alert-success mt-3 d-none">
							Mensaje enviado correctamente. Nos pondremos en contacto pronto.
						</div>
						
						<div id="errorMessage" class="alert alert-danger mt-3 d-none">
							Error al enviar el mensaje. Por favor, intente nuevamente.
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>
</Layout>

<script>
const form = document.getElementById('contactForm') as HTMLFormElement;
const successMessage = document.getElementById('successMessage') as HTMLDivElement;
const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;

if (form && successMessage && errorMessage) {
    form.addEventListener('submit', function(e) {
        const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        
        submitButton.disabled = true;
        
        // Formspree maneja el envío automáticamente
        successMessage.classList.remove('d-none');
        errorMessage.classList.add('d-none');
        
        // Limpiar el formulario después de 2 segundos
        setTimeout(() => {
            form.reset();
            submitButton.disabled = false;
        }, 2000);
    });
}
</script>

<style>
.btn-primary:hover {
	background-color: rgb(62, 125, 218) !important;
	border-color: rgb(62, 125, 218) !important;
}

.card {
    border: none;
}

.form-label {
    color: rgb(17, 60, 105);
    font-weight: 500;
}

.form-control:focus {
    border-color: rgb(62, 125, 218);
    box-shadow: 0 0 0 0.25rem rgba(62, 125, 218, 0.25);
}
</style>
